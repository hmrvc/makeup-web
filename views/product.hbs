<div class="row mb-5">
  <div class="col-md-12">
    <h1>{{product.name}}</h1>
    <p>[{{product.brand}}]</p>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{product.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Price: $</strong> {{product.price}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p style="white-space: break-spaces;">{{product.description}}</p>
  </div>
  <hr>
</div>

{{!-- Comment --}}
<form action="/comments" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="text">留下評論：</label>
    <textarea class="form-control" id="text" name="text" rows="3"></textarea>
  </div>
  <input type="hidden" name="productId" value="{{product.id}}" />
  <button type="submit" class="btn btn-primary">Submit</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>